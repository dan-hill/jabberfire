    {{/jf-nav-item}}
    {{/jf-role-required}}

    {{#jf-role-required roles='administrator technician'}}
    {{#jf-nav-item id='setting-nav'}}
      {{#link-to 'settings'}}
        {{sl-icon icon='settings'}}
        <span class="title">Settings</span>
        <span class="selected"></span>
      {{/link-to}}
    {{/jf-nav-item}}
    {{/jf-role-required}}

    {{#jf-role-required roles='administrator technician'}}
    {{#jf-nav-item id='department-nav'}}
      {{#link-to 'departments'}}
        {{sl-icon icon='layers'}}
        <span class="title">Departments</span>
        <span class="selected"></span>
      {{/link-to}}
    {{/jf-nav-item}}
    {{/jf-role-required}}

    {{#jf-role-required roles='administrator technician'}}
    {{#jf-nav-item id='support-nav'}}
      {{#link-to 'support.manual'}}
        {{sl-icon icon='support'}}
        <span class="title">Support</span>
        <span class="selected"></span>
      {{/link-to}}
    {{/jf-nav-item}}
    {{/jf-role-required}}

    {{/jf-sidebar-nav}}
    <!-- END SIDEBAR -->
    <!-- BEGIN CONTENT -->
    {{#jf-page-content}}
      {{outlet 'content'}}
    {{/jf-page-content}}


{{/jf-app-content-container}}
